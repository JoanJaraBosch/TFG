server {
    listen 443 ssl http2;
    error_page 497 https://$host:$server_port$request_uri;
    server_name _;

    server_tokens off;
    client_body_buffer_size 1k;  
    client_header_buffer_size 1k;
    client_max_body_size 100M;
    large_client_header_buffers 2 1k;
    add_header X-Frame-Options "SAMEORIGIN";
    add_header Strict-Transport-Security "max-age=31536000; includeSubdomains; preload";
    add_header X-XSS-Protection "1; mode=block";
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline' ws:; connect-src ws:" always;
    
    ssl off;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;    

    ssl_certificate /etc/nginx/ssl/nginx.crt;
    ssl_certificate_key /etc/nginx/ssl/nginx.key;
    ssl_dhparam /etc/nginx/ssl/dhparam.pem;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384;
    ssl_ecdh_curve secp384r1; # Requires nginx >= 1.1.0
    ssl_session_timeout  10m;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off; # Requires nginx >= 1.5.9
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;


    location /static/ {
        root /home/odroid/Downloads/TFG/odroid;
    }
    
    location /media/ {
        root /home/odroid/Downloads/TFG/odroid;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/odroid/Downloads/TFG/odroid/odroid.sock;
        limit_except GET HEAD POST { deny all; }
    }

}

server {
        listen 80 default_server;
        error_page 497 https://$host:$server_port$request_uri;
        server_name 0.0.0.0;

        return 301 https://$host$request_uri;
}
